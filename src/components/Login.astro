---
import Footer from './Footer.astro'
---

<section class='w-full h-screen justify-center items-center'>
  <div
    class='w-full h-[400px] flex flex-col justify-center items-center border-b-2 border-b-white/40'
  >
    <h1
      class='text-white/80 text-[78px] font-semibold animate-fade-right animate-once animate-duration-[700ms] animate-ease-in animate-normal'
    >
      Empresa de Desarrollo de software
    </h1>
  </div>

  <div
    class='w-full h-[380px] flex justify-center items-center flex-col gap-y-4'
  >
    <div
      class='flex justify-center items-center flex-col gap-y-4 border border-white/40 px-20 py-10 rounded-xl'
    >
      <label for='id' class='block mb-2 text-lg font-medium text-white/80'>
        Ingrese su n√∫mero de legajo
      </label>
      <div class='relative w-96'>
        <div class='absolute top-0 flex w-full justify-center'>
          <div
            class='h-[1px] animate-border-width rounded-full bg-gradient-to-r from-[rgba(17,17,17,0)] via-white to-[rgba(17,17,17,0)] transition-all duration-1000'
          >
          </div>
        </div>
        <input
          class='block text-white/80 h-12 w-full rounded-md border border-gray-800 bg-gray-950 px-3 py-2'
          placeholder='450235'
        />
      </div>
      <button
        id='btn-login'
        class='relative inline-flex h-12 items-center justify-center overflow-hidden rounded-md border border-gray-800 bg-gradient-to-r from-gray-900 to-gray-950 px-6 font-medium text-gray-300 shadow-2xl transition-colors hover:scale-110 hover:bg-white/10 transitio'
      >
        Ingresar
      </button>
    </div>
  </div>
  <div class='mt-14'>
    <Footer />
  </div>
</section>
